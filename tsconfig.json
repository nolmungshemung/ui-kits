{
  "compilerOptions": {  
    "target": "es5",  
    "jsx": "react",  
    "module": "commonjs",    
    "esModuleInterop": true,     
    "forceConsistentCasingInFileNames": true,         
    "strict": true,  
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["./src/**/*.tsx", "./src/**/*.ts"],
  "exclude": ["node_modules"]
}