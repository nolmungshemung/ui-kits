  "compilerOptions": {  
    "target": "es5",  
    "jsx": "react",  
    "module": "commonjs",    
    "esModuleInterop": true,     
    "forceConsistentCasingInFileNames": true,         
    "strict": true,  
    "skipLibCheck": true,
    
    /* 
